{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "format": "prettier --ignore-path .gitignore --write ./{**/,}*.{js,json,yml}",
    "format:check": "yarn format --check",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --verbose",
    "test:quick": "jest --only-changed",
    "check": "yarn test:ci && yarn format --check"
  },
  "dependencies": {
    "expo": "^32.0.0",
    "expo-cli": "^2.11.7",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "babel-preset-expo": "^5.0.0",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-expo": "^32.0.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.2"
  },
  "jest": {
    "preset": "jest-expo",
    "collectCoverageFrom": [
      "./{**/,}*.js",
      "!./{**/,}*.config.js",
      "!./coverage/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn --silent test:quick"
    }
  },
  "lint-staged": {
    "*.{js,json,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true
}
